{
  "manifest_version": 3,
  "name": "Tabflow",
  "version": "1.0.0",
  "description": "Groups inactive tabs into a 'Tabflow' group after user starts the timer.",
  "icons": {
    "16": "icons/tabflow16.png",
    "48": "icons/tabflow64.png",
    "128": "icons/tabflow128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/tabflow64.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["alarms", "tabs", "tabGroups", "storage"]
}
